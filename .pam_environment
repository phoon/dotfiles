# FCITX5
GTK_IM_MODULE   DEFAULT=fcitx
QT_IM_MODULE    DEFAULT=fcitx
XMODIFIERS      DEFAULT=@im=fcitx
XIM             DEFAULT=fcitx
XIM_PROGRAM     DEFAULT=fcitx

# XDG
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
XDG_STATE_HOME  DEFAULT=@{HOME}/.local/state
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share

KDEHOME         DEFAULT=${XDG_CONFIG_HOME}/kde
CUDA_CACHE_PATH DEFAULT=${XDG_CACHE_HOME}/nv
ZDOTDIR         DEFAULT=${XDG_CONFIG_HOME}/zsh
HISTFILE        DEFAULT=${XDG_STATE_HOME}/zsh/history
VIMINIT         DEFAULT="set nocp | source ${XDG_CONFIG_HOME}/vim/vimrc"

NPM_CONFIG_USERCONFIG DEFAULT=${XDG_CONFIG_HOME}/npm/npmrc

# MISCs
NPM_CONFIG_PREFIX   DEFAULT=@{HOME}/.local
